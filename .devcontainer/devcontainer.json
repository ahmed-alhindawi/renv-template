{
	"name": "R-base",
	"image": "base-r:latest",
	"workspaceMount": "",
	"runArgs": [
		"--volume=${localWorkspaceFolder}:/project/src/:Z",
		"--volume=${localWorkspaceFolder}/renv.lock:/project/renv.lock:Z",
		"--volume=${localWorkspaceFolder}/.Rprofile:/project/.Rprofile:Z"
	],
	"postStartCommand": "git config --global --add safe.directory /project/src/",
	"customizations": {
		"vscode": {
			"extensions": [
				"REditorSupport.r"
			]
		}
	}
}
